class Solution {
public:
    bool searchMatrix(vector<vector<int>>& matrix, int target) {
        
        int r = matrix.size();
        int c = matrix[0].size();
        
        int s = 0;
        int e = c-1;
        
        while(s<r && e>=0){
            if(matrix[s][e]==target)
                return true;
            
            if(matrix[s][e]>target){
                e--;
            }
            else if(matrix[s][e]<target){
                s++;
            }
        }
        return false;
    }
};
